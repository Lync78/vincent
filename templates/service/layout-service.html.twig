{% set j = 0 %}
<article class="grid-prix overflow-a">
    {% for i in 1..ligne %}
        <div class="tableau">
            <hr>
            <div class="tableau_grid">
                {% for u in 1..3 %}
                    {% if j < prices|length %}
                        <div class="block">
                            <div class="block-grid d-grid">
                                <div class="color {{ prices[j].color }}"></div>
                                <div class="block-text">
                                    <h3>{{ prices[j].name }}</h3>
                                    {% if prices[j].argu1 is defined and prices[j].argu1 is not null %}
                                        <p>{{ "(" ~ prices[j].argu1 ~ ")" }}</p>
                                    {% endif %}
                                </div>
                                <div class="block-price">
                                    <p class="purchase-paypal">paiement par paiment</p>
                                    <p class="a-partir-de">à partir de: <span>{{ prices[j].affichage }}</span></p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    {% set j = j + 1 %}
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</article>
<article class="information-complementaire">
    <p>acompte obligatoire (montant minimum de 10euros)</p>
    <p>cela peu varier d'après le montant de la commande</p>
</article>