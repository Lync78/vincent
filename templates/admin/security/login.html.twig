<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>Page de Connexion</title>
        <link rel="stylesheet" href="{{ asset('css/templates/admin/login/login.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('css/reset/reset.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('css/font/font.css') }}" type="text/css">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <main class="block-login">
            <section class="section-form">
                <img src="{{ asset('image/login/LOGO.png') }}" alt="Logo Xunidesgn">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <input type="email" placeholder="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        <input type="password" placeholder="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <div class="form-group-text">
                        <label class="remember_me" for="remember">
                            <input id="remember" type="checkbox" name="_remember_me">
                            <div>

                            </div>
                            <span>Remember me</span>
                        </label>
                    </div>

                    <button class="connexion" type="submit">
                        connexion
                    </button>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </form>
            </section>
        </main>
    </body>
</html>

