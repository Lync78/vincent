{% extends 'admin/base.html.twig' %}

{% block title %}
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/templates/admin/services/serviceAccueil.css') }}" type="text/css">
{% endblock %}

{% block js %}
{% endblock %}

{% block main %}
    <section class="admin-grid-service">
        {% set i = 0 %}
        {% for service in services %}
            <div class="{{ service.position ~ " " ~ service.background }} block-info">
                <div>
                    <h3>{{ service.title }}</h3>
                    <p class="pfirst">{{ service.sbtitle }}</p>
                    <div class="group-last">
                        <p class="last">{{ service.description }}</p>
                    </div>
                    <button class="formulaire-admin-serviceAccueil">
                        <i class="fa-regular fa-pen-to-square"></i>
                    </button>
                    <button class="trash">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>

                {{ form_start(forms[i]) }}
                    {{ form_row(forms[i].title) }}
                    {{ form_row(forms[i].sbtitle) }}
                    {{ form_row(forms[i].description) }}
                    {{ form_row(forms[i].actif) }}
                    {{ form_row(forms[i].background) }}
                    <button class="save">
                        <i class="fa-regular fa-floppy-disk"></i>
                    </button>
                    <button class="cancel">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                {{ form_end(forms[i]) }}
                {% set i = i + 1 %}
            </div>
        {% endfor %}
    </section>
{% endblock %}